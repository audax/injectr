<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".inject.InjectFragment">
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:max="10"
            android:progress="1"
            android:id="@+id/depthSeekBar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:min="4" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/injection_slider_label"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/switchCameraButton"
            android:src="@drawable/ic_switch_camera_black_24dp"
            android:contentDescription="@string/inject_switch_camera"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/takePhotoButton"
            app:layout_constraintBottom_toBottomOf="@+id/takePhotoButton"
            app:layout_constraintStart_toEndOf="@+id/takePhotoButton"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:src="@drawable/ic_flash_on_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/toggleFlashButton"
            app:layout_constraintEnd_toStartOf="@+id/saveInjectionButton"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/saveInjectionButton"
            app:layout_constraintBottom_toBottomOf="@+id/saveInjectionButton"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:contentDescription="@string/inject_toggle_flash"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveInjectionButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/save_injection_button" android:text="@string/save_injection_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <io.fotoapparat.view.CameraView
            android:id="@+id/camera_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/saveInjectionButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/guideline2" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/inject_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/takePhotoButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            android:src="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/injection_photo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            android:contentDescription="@string/injection_photo_description"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/takePhotoButton"
            app:layout_constraintEnd_toStartOf="@id/guideline2" android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/injection_slider_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="injection depth 6mm" android:labelFor="@+id/depthSeekBar"
            android:text="@string/injection_depth_label" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/injection_comment"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" tools:text="Injection comment" android:importantForAutofill="no"
            android:hint="@string/injection_comment_hint" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/depthSeekBar"
            android:id="@+id/injection_position_limb"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"/>
    <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/depthSeekBar"
            android:id="@+id/injection_position_nr"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>